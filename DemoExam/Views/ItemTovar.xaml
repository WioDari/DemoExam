<UserControl x:Class="DemoExam.Views.ItemTovar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoExam.Views"
             mc:Ignorable="d" 
                      d:DesignHeight="150" d:DesignWidth="770">
    <Grid>
        <Border BorderBrush="Black" Background="Black" BorderThickness="0,1,0,1" >
            <Grid Height="149" Width="784" RenderTransformOrigin="0.5,0.5" Background="White">
                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="80*"/>
                    <ColumnDefinition Width="233*"/>
                    <ColumnDefinition Width="79*"/>

                </Grid.ColumnDefinitions>
                <Border BorderBrush="Black" BorderThickness="1,0,1,0">
                    <Image Height="128" Margin="10,0,0,0" Width="125" Source="{Binding photo}" Stretch="Fill"/>
                </Border>

                <StackPanel Grid.Column="1" Margin="5,5,5,5">
                    <TextBlock Text="{Binding name}" FontSize="20" FontWeight="Bold" FontFamily="Times New Roman" Padding="0,0,0,1" MinWidth="1"/>
                    <TextBlock Text="{Binding description}" FontFamily="Times New Roman" Padding="0,0,0,1" FontSize="18"/>
                    <TextBlock Text="{Binding creator}" FontFamily="Times New Roman" Padding="0,0,0,1" FontSize="18"/>
                    <TextBlock Text="{Binding supplier, StringFormat=Поставщик: {0}}" FontFamily="Times New Roman" Padding="0,0,0,1" FontSize="18"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Цена: " FontFamily="Times New Roman" Padding="0,0,0,1" FontSize="18"/>
                        <TextBlock Visibility="{Binding id, Converter={StaticResource PriceVisibilityConverter}}" Text="{Binding price}" TextDecorations="Strikethrough" FontFamily="Times New Roman" Padding="0,0,0,1" FontSize="18" Foreground="Red" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding id, Converter={StaticResource DiscountMathConverter}}" FontFamily="Times New Roman" Padding="0,0,0,1" FontSize="18" Foreground="Black"/>
                    </StackPanel>
                    <TextBlock Foreground="{Binding quantity, Converter={StaticResource QuantityToColorConverter}}" Text="{Binding quantity, StringFormat=Количество на складе: {0}}" FontFamily="Times New Roman" Padding="0,0,0,1" FontSize="18"/>
                </StackPanel>

                <Border BorderBrush="Black" BorderThickness="1,0,1,0" Grid.Column="2" Background="{Binding discount, Converter={StaticResource DiscountToBGConverter}}" Margin="0,0,10,0">
                    <TextBlock Grid.Column="2" Text="{Binding discount, StringFormat={}{0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="57" Width="100" FontFamily="Times New Roman" FontSize="44" FontWeight="Bold"/>
                </Border>
            </Grid>
        </Border>
        <TextBlock HorizontalAlignment="Left" Margin="626,134,0,0" TextWrapping="Wrap" Text="{Binding id}" VerticalAlignment="Top" Width="134" Foreground="{x:Null}"/>
    </Grid>
</UserControl>
