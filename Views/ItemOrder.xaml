<UserControl x:Class="DemoExam.Views.ItemOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoExam.Views"
             mc:Ignorable="d" 
             d:DesignHeight="139.688" d:DesignWidth="800" FontFamily="Times New Roman" FontSize="20">
    <Grid Background="White" Width="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="321*"/>
            <ColumnDefinition Width="79*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" Grid.ColumnSpan="2" BorderThickness="1,1,1,1">
            <TextBlock TextWrapping="Wrap" Text="{Binding id}" Foreground="{x:Null}"/>

        </Border>
        <StackPanel Margin="10,10,10,10">
            <TextBlock TextWrapping="Wrap" Text="{Binding art}" FontWeight="Bold" FontSize="24"/>
            <TextBlock TextWrapping="Wrap" Text="{Binding status}"/>
            <TextBlock TextWrapping="Wrap" Text="{Binding address}"/>
            <TextBlock TextWrapping="Wrap" Text="{Binding order_date}"/>
        </StackPanel>
        <TextBlock Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding ship_date}" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
